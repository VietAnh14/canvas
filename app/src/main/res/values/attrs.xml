<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="startColor" format="color" />
    <attr name="endColor" format="color" />
    <attr name="max" format="integer" />
    <attr name="currentProgress" format="integer" />

    <declare-styleable name="FloatingLabelEditText">
        <attr name="floatLabelTextAppearance" format="reference" />
        <attr name="floatLabelTrigger" format="enum">
            <enum name="text" value="0" />
            <enum name="focus" value="1" />
        </attr>
        <attr name="floatLabelSidePadding" format="reference|dimension" />
    </declare-styleable>

    <declare-styleable name="CustomProgressbar">
        <attr name="startColor"/>
        <attr name="endColor" />
        <attr name="max" />
        <attr name="currentProgress"/>
    </declare-styleable>

    <declare-styleable name="RoundProgressBar">
        <attr name="startColor"/>
        <attr name="endColor" />
        <attr name="trackColor" format="color" />
        <attr name="max"/>
        <attr name="currentProgress"/>
        <attr name="startAngle" format="integer" />
        <attr name="sweepRadius" format="integer" />
        <attr name="lineSize" format="dimension" />
        <attr name="lineWidth" format="dimension" />
        <attr name="lineCount" format="integer" />
    </declare-styleable>

</resources>